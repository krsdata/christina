style(). 
    .btn{
      padding: 5px 20px;
      display: inline-block;
    }
    .btn.btn-primary{
      border-radius: 3px;
      background: #F05832;
      color: #ffffff;
    }
    h1,h2,h3,h4,h5,h6{
      font-family: 'Poppins', sans-serif;
      color: #000000;
      margin-top: 0;
      margin-bottom: 10px;
      font-weight: 400;
    }
    body{
      font-family: 'Muli', sans-serif;
      font-weight: 400;
      font-size: 15px;
      line-height: 1.8;
      color: #808080;
    }
    a{
      color: #ffc0d0; text-decoration:none;
    }
    table{ font-size: 13px
    }
    .logo a {
        color: #4EB7F8;
        text-transform: capitalize;
    }
    .bg_white {
        background: #fff;
    }
    .bg_primary {
        background: #2F3B59;
    }
    .intro .text h2{
      color: #000;
      font-size: 34px;
      margin-bottom: 0;
      font-weight: 300;
    }
    .intro .text h2 span{
      font-weight: 600;
      color: #ffc0d0;
    }
    ul.social{
      padding: 0; margin:0;
    }
    ul.social li{
      display: inline-block;
      margin-right: 10px;
    }
    .item_name,.item_dis{margin:0 ;}
    table{border-collapse: collapse;}
    .invoice_table th {
        border-bottom: 1px solid #ccc;
        border-top: 1px solid #ccc;
        background: #2D47FE;
        color: #fff;
        padding: 5px 10px;
        font-size: 13px;
    }
    .invoice_table tr:nth-of-type(2n+1) {
        background-color: rgba(0,0,0,.05);
    }
    .invoice_table td{ border-bottom: 1px solid #eee; padding: 10px; font-size: 13px}
    .sub_invoice td,.sub_invoice th{padding: 10px 20px; border-bottom: 1px solid #eee}
